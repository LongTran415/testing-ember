<div class="jumbotron myjumbotron text-center">
    <h1>Coming Soon</h1>

    <p>
      Don't miss our launch date, request an invitation now.
    </p>

    <div class="index-content">

      <div class="form-horizontal form-group form-group-lg row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
          {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
          <button onclick={{action "saveInvitation"}} class="btn btn-primary btn-lg btn-block" disabled="{{if isDisabled "disabled"}}">
            Request invitation
          </button>
        </div>
      </div>

      {{#if responseMessage}}
          <div class="alert alert-success bg-success">{{responseMessage}}</div>
      {{/if}}
    </div>

</div>
